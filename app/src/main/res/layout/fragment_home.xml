    <TextView
            android:id="@+id/tvConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/signIn"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/img_search_bar_global"
            app:layout_constraintTop_toTopOf="@+id/img_search_bar_global"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/popularArticle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/popularArticle"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@+id/tvConnection"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toStartOf="parent" />

    <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:layout_editor_absoluteX="-16dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/popularArticle"
            android:scrollbars="none"
            android:id="@+id/horizontalScrollView">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                android:id="@+id/ConstraintLayout">

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewPopularArticle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </HorizontalScrollView>

    <TextView
            android:id="@+id/whatIsUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:text="@string/whatIsUp"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
            android:layout_marginTop="50dp"
            app:layout_constraintStart_toStartOf="parent" />

    <ImageView
            android:id="@+id/img_search_bar_category"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_category"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/img_search_bar_global"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/img_search_bar_category"
            app:layout_constraintTop_toTopOf="@+id/img_search_bar_category"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/img_search_bar_category"
            android:layout_marginEnd="5dp" />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewWhatIsUp"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/whatIsUp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
