<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frameLayout"
        android:orientation="vertical">

    <TextView
            android:text="Carte de crédit ou de débit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/imgCreditCard"
            app:layout_constraintTop_toTopOf="@+id/imgCreditCard"
            app:layout_constraintBottom_toBottomOf="@+id/imgCreditCard" />

    <TextView
            android:text="PayPal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imgPayPal"
            app:layout_constraintBottom_toBottomOf="@+id/imgPayPal"
            app:layout_constraintStart_toEndOf="@+id/imgPayPal" />

    <TextView
            android:text="BitCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:id="@+id/textView4"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imgBitCoin"
            app:layout_constraintBottom_toBottomOf="@+id/imgBitCoin"
            app:layout_constraintStart_toEndOf="@+id/imgBitCoin"
            app:layout_constraintVertical_bias="0.459" />

    <TextView
            android:text="Etherum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:alpha="0.5"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/imgEthereum"
            app:layout_constraintBottom_toBottomOf="@+id/imgEthereum"
            app:layout_constraintStart_toEndOf="@+id/imgEthereum"
            app:layout_constraintVertical_bias="0.483" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:alpha="0.5"
            app:srcCompat="@drawable/ic_bitcoin"
            android:id="@+id/imgBitCoin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imgPayPal" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_ethereum"
            android:id="@+id/imgEthereum"
            android:layout_marginTop="16dp"
            android:alpha="0.5"
            app:layout_constraintTop_toBottomOf="@+id/imgBitCoin"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_paypal"
            android:id="@+id/imgPayPal"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imgCreditCard" />

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_credit_card"
            android:id="@+id/imgCreditCard"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>