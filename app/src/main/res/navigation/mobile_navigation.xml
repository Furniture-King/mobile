<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.app.ui.pages.home.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home" />

    <fragment
            android:id="@+id/navigation_basket"
            android:name="com.example.app.ui.pages.basket.BasketFragment"
            android:label="@string/title_basket"
            tools:layout="@layout/fragment_settings" />

    <fragment
            android:id="@+id/navigation_history"
            android:name="com.example.app.ui.pages.history.HistoryFragment"
            android:label="@string/title_history"
            tools:layout="@layout/fragment_basket" />
    <fragment
            android:id="@+id/navigation_settings"
            android:name="com.example.app.ui.pages.settings.SettingsFragment"
            android:label="@string/title_settings" />


</navigation>