<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mobile_navigation"
        app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="com.example.app.ui.pages.home.HomeFragment"
            android:label="@string/titleHome"
            tools:layout="@layout/fragment_home"
            app:defaultNavHost="true"
            />

    <fragment
            android:id="@+id/navigation_basket"
            android:name="com.example.app.ui.pages.basket.BasketFragment"
            android:label="@string/titleBasket"
            tools:layout="@layout/fragment_settings" />

    <fragment
            android:id="@+id/navigation_history"
            android:name="com.example.app.ui.pages.history.HistoryFragment"
            android:label="@string/titleHistory"
            tools:layout="@layout/fragment_basket" >
        <action
                android:id="@+id/action_navigation_history_to_navigation_settings"
                app:destination="@id/navigation_settings" />
    </fragment>
    <fragment
            android:id="@+id/navigation_settings"
            android:name="com.example.app.ui.pages.settings.SettingsFragment"
            android:label="@string/titleSettings" >
        <action
                android:id="@+id/action_navigation_settings_to_navigation_history"
                app:destination="@id/navigation_history" />
    </fragment>


</navigation>